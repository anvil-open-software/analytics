<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.dematic.labs.persistence.entities.Document</class>
        <class>com.dematic.labs.persistence.entities.ItemMaster</class>
        <class>com.dematic.labs.persistence.entities.Line</class>
        <class>com.dematic.labs.persistence.entities.Organization</class>
        <class>com.dematic.labs.persistence.entities.OrganizationBusinessRole</class>
        <properties>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
        </properties>
    </persistence-unit>
</persistence>
